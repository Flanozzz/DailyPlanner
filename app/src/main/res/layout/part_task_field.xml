<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">
        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background">
                <View
                    android:id="@+id/line_high"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/rectangle_for_line"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_field_layout">
                        <ImageButton
                            android:id="@+id/checkbox"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/rectangle_for_checkbox_inactive"
                            android:layout_gravity="center"
                            android:textColor="@color/c2"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textSize="15sp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>

                        <EditText
                            android:id="@+id/edit_field"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:autofillHints="text"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/ubuntu"
                            android:hint="Введите задачу"
                            android:paddingLeft="10dp"
                            android:text="texttexttext"
                            android:textColor="@color/backgroundLight4"
                            android:textColorHint="@color/backgroundLight1"
                            android:textSize="22sp"
                            tools:ignore="TouchTargetSizeCheck"
                            android:inputType="textNoSuggestions"
                            android:maxLines="1"/>
                        <Button
                            android:id="@+id/remove_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/rectangle_for_cross_btn"
                            android:layout_gravity="center"
                            android:text="✖"
                            android:textColor="@color/c2"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textSize="15sp"
                            android:paddingBottom="3dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>

                </LinearLayout>
                <View
                    android:id="@+id/line_low"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/rectangle_for_line"
                    android:layout_below="@id/edit_field_layout"/>
        </RelativeLayout>
