<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayListFragment"
    android:id="@+id/mainLayout"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/day_list_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/day_list_layout"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_day_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/plus_button_size"
                android:layout_height="@dimen/plus_button_size"
                android:background="@drawable/circle"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>